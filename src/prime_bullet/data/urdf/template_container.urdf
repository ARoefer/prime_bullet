<robot name="box">
<link name="body">
    <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="{{mass}}"/>
        <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
    <!-- Floor -->
    <visual>
        <origin xyz="0 0 {{(size[2] - wall_thickness) * -0.5}}"/>
        <geometry>
            <box size="{{size[0]}} {{size[1]}} {{wall_thickness}}"/>
        </geometry>
        <material name="white">
            <color rgba="{{color[0]}} {{color[1]}} {{color[2]}} {{color[3]}}"/>
        </material>
    </visual>
    <collision>
        <origin xyz="0 0 {{(size[2] - wall_thickness) * -0.5}}"/>
        <geometry>
            <box size="{{size[0]}} {{size[1]}} {{wall_thickness}}"/>
        </geometry>
    </collision>
    {% if closed %}
    <!-- Top -->
    <visual>
        <origin xyz="0 0 {{(size[2] - wall_thickness) * 0.5}}"/>
        <geometry>
            <box size="{{size[0]}} {{size[1]}} {{wall_thickness}}"/>
        </geometry>
        <material name="white">
            <color rgba="{{color[0]}} {{color[1]}} {{color[2]}} {{color[3]}}"/>
        </material>
    </visual>
    <collision>
        <origin xyz="0 0 {{(size[2] - wall_thickness) * 0.5}}"/>
        <geometry>
            <box size="{{size[0]}} {{size[1]}} {{wall_thickness}}"/>
        </geometry>
    </collision>
    {% endif %}
    <!-- Left Wall -->
    <visual>
        <origin xyz="0 {{(size[1] - wall_thickness) * 0.5}} 0"/>
        <geometry>
            <box size="{{size[0]}} {{wall_thickness}} {{size[2]}}"/>
        </geometry>
        <material name="white">
            <color rgba="{{color[0]}} {{color[1]}} {{color[2]}} {{color[3]}}"/>
        </material>
    </visual>
    <collision>
        <origin xyz="0 {{(size[1] - wall_thickness) * 0.5}} 0"/>
        <geometry>
            <box size="{{size[0]}} {{wall_thickness}} {{size[2]}}"/>
        </geometry>
    </collision>
    <!-- Right Wall -->
    <visual>
        <origin xyz="0 {{(size[1] - wall_thickness) * -0.5}} 0"/>
        <geometry>
            <box size="{{size[0]}} {{wall_thickness}} {{size[2]}}"/>
        </geometry>
        <material name="white">
            <color rgba="{{color[0]}} {{color[1]}} {{color[2]}} {{color[3]}}"/>
        </material>
    </visual>
    <collision>
        <origin xyz="0 {{(size[1] - wall_thickness) * -0.5}} 0"/>
        <geometry>
            <box size="{{size[0]}} {{wall_thickness}} {{size[2]}}"/>
        </geometry>
    </collision>
    <!-- Front Wall -->
    <visual>
        <origin xyz="{{(size[0] - wall_thickness) * 0.5}} 0 0"/>
        <geometry>
            <box size="{{wall_thickness}} {{size[1]}} {{size[2]}}"/>
        </geometry>
        <material name="white">
            <color rgba="{{color[0]}} {{color[1]}} {{color[2]}} {{color[3]}}"/>
        </material>
    </visual>
    <collision>
        <origin xyz="{{(size[0] - wall_thickness) * 0.5}} 0 0"/>
        <geometry>
            <box size="{{wall_thickness}} {{size[1]}} {{size[2]}}"/>
        </geometry>
    </collision>
    <!-- Back Wall -->
    <visual>
        <origin xyz="{{(size[0] - wall_thickness) * -0.5}} 0 0"/>
        <geometry>
            <box size="{{wall_thickness}} {{size[1]}} {{size[2]}}"/>
        </geometry>
        <material name="white">
            <color rgba="{{color[0]}} {{color[1]}} {{color[2]}} {{color[3]}}"/>
        </material>
    </visual>
    <collision>
        <origin xyz="{{(size[0] - wall_thickness) * -0.5}} 0 0"/>
        <geometry>
            <box size="{{wall_thickness}} {{size[1]}} {{size[2]}}"/>
        </geometry>
    </collision>
</link>
</robot>