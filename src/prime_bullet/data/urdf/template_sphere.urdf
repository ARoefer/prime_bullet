<robot name="sphere">
<link name="body">
    <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="{{mass}}"/>
        <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
    <visual>
        <geometry>
            <sphere radius="{{radius}}"/>
        </geometry>
        <material name="white">
            <color rgba="{{color[0]}} {{color[1]}} {{color[2]}} {{color[3]}}"/>
        </material>
    </visual>
    <collision>
        <geometry>
            <sphere radius="{{radius}}"/>
        </geometry>
    </collision>
</link>
</robot>